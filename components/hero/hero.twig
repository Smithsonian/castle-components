{% apply spaceless %}
  {% set classes = [
      'relative',
      'overflow-hidden',
      'isolate',
      'px-6',
      'pt-14',
      'lg:px-8',
      'bg-surface-300',
      'dark:bg-surface-800',
      'shadow-sm',
      'prose-lg', 
      'md:prose-xl', 
      'lg:prose-2xl',
    ] 
  %}
  {% if utilities is defined %}
    {% set classes = castle_merge_utility_classes(utilities, classes) %}
  {% endif %}
  <section {{ attributes.addClass(classes).setAttribute('role', 'banner') }}>
    <div class="max-w-screen-lg mx-auto">
      {% block default %}{% endblock default %}
    </div>
  </section>
{% endapply %}
