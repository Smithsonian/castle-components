{% apply spaceless %}
  {% set classes = ['mb-3', 'md:mb-4', 'lg:mb-5'] %}
  {% if id %}
    {% set attributes = attributes.setAttribute('id', id) %}
  {% endif %}
  {% set tag = 'div' %}
  {% if as and as|lower in ['h1', 'h2', 'h3', 'h4', 'h5', 'h6'] %}
    {% set tag = as %}
  {% endif %}
  {# TODO: Add sizes #}
  <{{ tag }} {{ attributes.addClass(classes) }}">
    {% block content %}{% endblock content %}
  </{{ tag }}>
{% endapply %}