{% apply spaceless %}
  {% set classes = [
    'grid', 'grid-cols-1', 'md:grid-cols-10', 'gap-4',
    'w-full',
    'px-2', 'lg:px-6', 'py-4',
    'md:max-h-96', 'lg:max-h-max']
  %}
  {% if utilities is defined %}
    {% set classes = castle_merge_utility_classes(utilities, classes) %}
  {% endif %}
  <div {{ attributes.addClass(classes) }}>
    {# Media slot #}
    {% if block('media') is defined and block('media') != '' %}
      <div class="col-span-1 md:col-span-3 lg:col-span-2">
        {{ block('media') }}
      </div>
    {% endif %}
    <div class="col-span-1 md:col-span-6">
      {# Header slot #}
      {% if block('header') is defined and block('header') != '' %}
        <header class="mb-4">
          {{ block('header') }}
        </header>
      {% endif %}
      {# Body slot #}
      {% block body %}{% endblock body %}
    </div>
    {# Info slot #}
    {% if block('footer') is defined and block('footer') != '' %}
      <div class="col-span-1 md:col-span-1 lg:col-span-2">
        {{ block('footer') }}
      </div>
    {% endif %}
  </div>
{% endapply %}